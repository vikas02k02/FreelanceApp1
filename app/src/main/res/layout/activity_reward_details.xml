<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".rewardDetails">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/axislogo"
        tools:layout_editor_absoluteX="4dp" />

    <LinearLayout
        android:id="@+id/visa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Axis Rewards Exclusive"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.632"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/premium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Premium Travel Benefits and Experiences" />

        <android.widget.Button
            android:id="@+id/premiumBtn"
            android:layout_width="111dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_item"
            android:text="View Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Axis Rewards Exclusive"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:layout_constraintVertical_bias="0.469"
            app:srcCompat="@drawable/reward"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Higher Points Offer upto 25% more Points" />

        <android.widget.Button
            android:id="@+id/normalBtn"
            android:layout_width="111dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_item"
            android:contentDescription="@string/app_name"
            android:text="View Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:background="#F7F7F7"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/master">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Axis Rewards Exclusive"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toBottomOf="@id/normalBtn"
            app:layout_constraintVertical_bias="0.9"
            app:srcCompat="@drawable/superior" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Superior cashback at US Supermarkets" />

        <android.widget.Button
            android:id="@+id/superiorBtn"
            android:layout_width="111dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_item"
            android:contentDescription="@string/app_name"
            android:text="View Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.917"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>